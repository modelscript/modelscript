  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "package.json",
    "README.md",
    "COPYING",
    "src/**/*.ts",
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "dist/**/*.d.ts.map"
  ],
  "workspaces": [
    ".",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "clean": "rimraf dist",
    "format": "prettier . --write",
    "lint": "eslint src --ext ts",
    "prepare": "husky",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "watch": "tsc --watch"
  },
  "lint-staged": {
    "*.ts": "eslint --ext ts",
    "*.{ts,tsx,js,json,md,yml,css}": "prettier --write"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "^3.2.5",
    "pako": "^2.1.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.2",
    "dedent-js": "^1.0.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-ctrf-json-reporter": "^0.0.10",
    "jiti": "^2.6.1",
    "lerna": "^9.0.0",
    "lint-staged": "^16.2.7",
    "nx": "^22.5.3",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "rimraf": "^6.1.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "engines": {
    "node": ">=22"
  }
}
